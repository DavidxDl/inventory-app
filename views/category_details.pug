extends layout

block content 
  h1= category.name

  if eliquids_list.length
    h4 Eliquids
    ul
      each eliquid in eliquids_list
        li
          a(href=eliquid.url) #{eliquid.name}
  else
    p no eliquids in this category
  div(class="split-btns")
    a(class="btn btn-primary" href=`${category.url}/update`) Update Category
    a(class="btn btn-primary" href=`${category.url}/delete`) Delete Category
