extends layout

block content

  h1= title

  form(method="POST")
    div.form-group
      label(for="name") Name:
      input(
        class="form-control"
        type="text"
        required
        name="name"
        id="name"
        placeholder="mclovin"
        value=category===undefined ? "" : category.name
        )
    if errors && errors.length > 0
       ul
         each err in errors
            li(style="color:red;")= err.msg
    button(class="btn btn-primary" type="submit") Create Category


